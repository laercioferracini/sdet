#!groovy

pipeline {
    agent any
    stages {
        stage('Checking project') {
            steps {
                dir("docker-validation") {
                    bat "dir"
                }
            }
        }
        stage('Build') {
            steps {
                bat "mvn compile"
            }

        }
        stage('Deploy') {
            steps {
                echo "Deploy code in dev"
            }
        }
        stage('Test') {
            steps {
                bat "mvn test"
            }
        }
    }
}