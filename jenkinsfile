#!groovy

pipeline {
    agent any
	enviroment{
		PATH = 'docker-validation/'
	}
    stages {
        stage('Checking project'){
            steps {
                bat "cd ${PATH}"
            }
        }
        stage('Build') {
            steps {
                bat "mvn -f ${PATH} compile"
            }

        }
        stage('Deploy') {
            steps {
                echo "Deploy code in dev"
            }
        }
        stage('Test') {
            steps {
                bat "mvn -f ${PATH} test"
            }
        }
    }
}